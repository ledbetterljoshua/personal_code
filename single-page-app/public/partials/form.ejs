<div ng-controller="AppCtrl">
  <div class="col-md-6 content" style="margin-top: 10px;">
    <div class="container">
      <div class="border-top"></div>
      <div class="content">
        <md-content>
          <md-list flex="" role="list" class="flex">
            <form class="new">
              <div class="group">
                <input type="text" placeholder="Title" ng-model="match.title"><span class="highlight"></span><span class="bar"></span>
              </div>
              <div class="group">
              
                  <textarea ng-model="match.description" placeholder="Textarea"></textarea>
            
              </div>
              <input type="text" style="margin-bottom: 20px;" placeholder="Image URL" ng-model="match.image" value=""><span class="highlight"></span><span class="bar"></span>
              <span class="headline">List of items</span>
              <div class="group">
                <div ng-repeat="item in match.items">
                  <input type="text" placeholder="item" ng-model="item.text" value=""><span class="highlight"></span><span class="bar"></span>
                </div>
                  <md-button class="md-raised md-button md-ink-ripple" ng-click="addItems()">New Item</md-button>
              </div>

              <span class="headline">Steps to make</span>
              <div class="group">
                <div ng-repeat="step in match.steps">
                  <input type="text"  placeholder="step" ng-model="step.text"><span class="highlight"></span><span class="bar"></span>
                </div>
                <md-button class="md-raised md-button md-ink-ripple" ng-click="addSteps()">New Step</md-button>
              </div>

              <md-button type="button" ng-click="addPost()" class="button md-raised md-button md-primary md-ink-ripple buttonBlue">Submit
                <div class="ripples buttonRipples"><span class="ripplesCircle"></span></div>
              </md-button>
            </form>
          <md-list>
        </md-content>
      </div>
    </div>
  </div>
  <div class="col-md-4 content">
    <div class="fill-me">
     <div> 
      <md-card>
      <div class="form-img">
        <img class="md-card-image" alt="Washed Out" ng-src="{{match.image || 'http://redperiscope.asia/wp-content/uploads/2014/04/placeholder3.png'}}">
      </div>
      <md-card-title>
        <md-card-title-text>
          <span class="md-headline">{{match.title || "title"}}</span>
        </md-card-title-text>
      </md-card-title>
      <md-card-content>
        <p>
          {{match.description || "description"}}
        </p>
        <h3 class="formheader">YOU'LL NEED...</h3>
        <ul>
          <li ng-repeat="item in match.items">{{item.text}}</li>
      </ul>
      <md-divider style="margin: 10px 0;"></md-divider>
      <h3 class="formheader">LET'S GET COOKING...</h3>
      <ul>
          <li ng-repeat="step in match.steps">{{step.text}}</li>
      </ul>
      </md-card-content>
      <md-card-actions layout="row" layout-align="end center" class="layout-align-end-center layout-row">
        <button class="md-button md-ink-ripple" type="button" aria-label="Action 1"><i class="fa fa-heart-o"></i><div class="md-ripple-container"></div></button>
      </md-card-actions>
      </md-card>
    </div>
    </div>
  </div>
</div>

